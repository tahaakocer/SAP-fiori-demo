<mvc:View
    controllerName="com.solvia.demo.controller.Form"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Text text="Form" />
    <f:Form editable="true">
        <f:title>
            <core:Title text="Student Register" />
        </f:title>
        <f:layout>
            <f:ResponsiveGridLayout
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                columnsXL="1"
                columnsL="1"
                singleContainerFullSize="false"
            />
        </f:layout>
        <f:formContainers>
            <f:FormContainer>
                <f:formElements>
                    <f:FormElement label="Name">
                        <f:fields>
                            <Input
                                id="idNameInput"
                                value="{name}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="Surname">
                        <f:fields>
                            <Input
                                id="idSurnameInput"
                                value="{surname}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="Lesson">
                        <f:fields>
                            <Select
                                id="idLessonSelect"
                                selectedKey="{lesson}"
                                items="{
                                    path: 'globalModel>/getAllDomains',
                                    templateShareable: false
                                }"
                            >
                                <core:Item
                                    key="{globalModel>Lessonid}"
                                    text="{globalModel>Lessonname}"
                                />
                            </Select>
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="Point">
                        <f:fields>
                            <Input
                                id="idPointInput"
                                value="{point}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="">
                        <f:fields>
                            <Button
                                type="Success"
                                class="saveButton"
                                text="Save"
                                press=".onSaveButtonPress"
                            />
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
        </f:formContainers>
    </f:Form>
</mvc:View>
