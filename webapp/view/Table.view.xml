<mvc:View
    controllerName="com.solvia.demo.controller.Table"
    xmlns="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:u="sap.ui.unified"
    xmlns:c="sap.ui.core"
    xmlns:m="sap.m"
    height="100%"
>
    <Table
        id="idTable"
        rows="{studentModel>/students}"
        ariaLabelledBy="title"
        
    >
        <extension>
            <m:OverflowToolbar style="Clear">
                <m:Title text="Students" />
                <m:ToolbarSpacer />
                <m:Button
                    icon="sap-icon://decline"
                    tooltip="Clear Selection"
                    press=".onButtonClearPress"
        
                />
                <m:Button
                    icon="sap-icon://save"
                    tooltip="Save"
                    text="Save"
                    type="Success"
                />
                <m:Button
                    icon="sap-icon://user-settings"
                    tooltip="Update Selection"
                    text="Update Selected"
                    type="Emphasized"
                    press=".onUpdateSelectedButtonPress"
                />

                <m:Button
                    icon="sap-icon://delete"
                    tooltip="Delete Selected Student"
                    press=".onDeleteSelectedButtonPress"
                    type="Negative"
                    text="Delete Selected"

                />
            </m:OverflowToolbar>
        </extension>

        <columns>
            <Column width="11rem">
                <m:Label text="Student Id" />
                <template>
                    <m:Label text="{studentModel>id}" />
                </template>
            </Column>

            <Column width="11rem">
                <m:Label text="Name" />
                <template>
                    <m:Text
                        text="{studentModel>name}"
                        wrapping="false"
                    />
                </template>
            </Column>
            <Column width="11rem">
                <m:Label text="Surname" />
                <template>
                    <m:Label text="{studentModel>surname}" />
                </template>
            </Column>
            <Column width="12rem">
                <m:Label text="Lesson" />
                <template>
                    <m:Label
                        text="{path: 'studentModel>lesson',
                        formatter: '.formatLesson'}"
                    />
                </template>
            </Column>
            <Column width="11rem">
                <m:Label text="Point" />
                <template>
                    <u:Currency value="{studentModel>point}" />
                </template>
            </Column>
            <Column width="11.8rem">
                <m:Label text="Details" />
                <template>
                    <m:Button
                        type="Neutral"
                        text="Show Details"
                        press=".onShowDetailsButtonPress"
                    />
                </template>
            </Column>
            <Column
                width="6rem"
                hAlign="Center"
            >
                <m:Label text="Status" />
                <template>
                    <c:Icon
                        src="{
                            path: 'studentModel>status',
                            formatter: '.formatStatusIcon'
                        }"
                    />
                </template>
            </Column>
        </columns>
    </Table>
</mvc:View>
